{
  "compilerOptions": {
    "declaration": true,
    "lib": [
      "dom",
      "es2015",
      "es2016",
      "es2017",
      "es2018",
      "es2019",
      "es2019.array",
      "es2020",
      "esnext"
    ],
    "module": "CommonJS",
    "incremental": true,
    "moduleResolution": "Node",
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "preserveConstEnums": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "isolatedModules": false,
    "sourceMap": true,
    "skipLibCheck": true,
    "target": "ESNext",
    "outDir": "./lib",
    "rootDir": "./src"
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "**/lib/**",
    "./*/lib",
    "node_modules",
    "node_modules/**/*.*",
    "**/node_modules/**/*.*",
    "**/node_modules/**",
    "../node_modules/**/*.*",
    "../../node_modules/**/*.*",
    "../node_modules",
    "**/lib/**/*.d.ts",
    "**/lib/**/*.ts",
    "**/lib/**/*.js",
    "packages/*/lib/**/*.d.ts",
    "packages/*/lib/**/*.ts",
    "packages/*/lib/**/*.js",
    "lib/**/*.d.ts",
    "lib/**/*.ts",
    "lib/**/*.js"
  ]
}
